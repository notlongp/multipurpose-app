<OpeningScreen>:
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 20, 20
        RelativeLayout:
            size_hint: 0.2, 0.2
            Label:
                color: 1,1,1,1
                text: "Select application"
                font_size: "25sp"
        FloatLayout:
            padding: 20, 20
            spacing: 10, 10
            Button:
                text: "Simple Calculator"
                size_hint_x: None
                size_hint_y: None
                width: 250
                height: 60
                pos_hint: {'center_x': .5, 'center_y': 0.9}
                background_color: 2, 0.9, 0.6, 1
                on_press: root.calculator()
            Button:
                text: "Unit Converter"
                size_hint_x: None
                size_hint_y: None
                width: 250
                height: 60
                pos_hint: {'center_x': .5, 'center_y': 0.7}
                background_color: 2, 0.9, 0.6, 1
                on_press: root.converter()
            Button:
                text: "Clock"
                size_hint_x: None
                size_hint_y: None
                width: 250
                height: 60
                pos_hint: {'center_x': .5, 'center_y': 0.5}
                background_color: 2, 0.9, 0.6, 1
                on_press: root.clock()
            Button:
                text: "Journal"
                size_hint_x: None
                size_hint_y: None
                width: 250
                height: 60
                pos_hint: {'center_x': .5, 'center_y': 0.3}
                background_color: 2, 0.9, 0.6, 1
                on_press: root.journal()

<CalculatorScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            size_hint_x: None
            size_hint_y: None
            width: 100
            height: 30
            RelativeLayout:
                Button:
                    text: "Back"
                    on_press: root.back()
                    background_color: 2, 0.9, 0.6, 1

        GridLayout:
            cols: 1
            padding: 10, 10
            BoxLayout:
                TextInput:
                    id: entry
                    font_size: 30
                    multiline: False

        GridLayout:
            cols: 4
            padding: 5, 5
            spacing: 5, 5

            Button:
                text: 'AC'
                on_press: entry.text = ''
                background_color: 2, 0.9, 0.6, 1
            Button:
                text: '+/-'
                on_press: entry.text = root.reverse(entry.text)
                background_color: 2, 0.9, 0.6, 1
            Button:
                text: '%'
                on_press: entry.text = root.percent(entry.text)
                background_color: 2, 0.9, 0.6, 1
            Button:
                text: '/'
                on_press: entry.text += self.text
                background_color: 2, 0.9, 0.6, 1

        GridLayout:
            cols: 4
            padding: 5, 5
            spacing: 5, 5

            Button:
                text: '7'
                on_press: entry.text += self.text
                background_color: 2, 0.9, 0.6, 1
            Button:
                text: '8'
                on_press: entry.text += self.text
                background_color: 2, 0.9, 0.6, 1
            Button:
                text: '9'
                on_press: entry.text += self.text
                background_color: 2, 0.9, 0.6, 1
            Button:
                text: '*'
                on_press: entry.text += self.text
                background_color: 2, 0.9, 0.6, 1

        GridLayout:
            cols: 4
            padding: 5, 5
            spacing: 5, 5

            Button:
                text: '4'
                on_press: entry.text += self.text
                background_color: 2, 0.9, 0.6, 1
            Button:
                text: '5'
                on_press: entry.text += self.text
                background_color: 2, 0.9, 0.6, 1
            Button:
                text: '6'
                on_press: entry.text += self.text
                background_color: 2, 0.9, 0.6, 1
            Button:
                text: '-'
                on_press: entry.text += self.text
                background_color: 2, 0.9, 0.6, 1

        GridLayout:
            cols: 4
            padding: 5, 5
            spacing: 5, 5

            Button:
                text: '1'
                on_press: entry.text += self.text
                background_color: 2, 0.9, 0.6, 1
            Button:
                text: '2'
                on_press: entry.text += self.text
                background_color: 2, 0.9, 0.6, 1
            Button:
                text: '3'
                on_press: entry.text += self.text
                background_color: 2, 0.9, 0.6, 1
            Button:
                text: '+'
                on_press: entry.text += self.text
                background_color: 2, 0.9, 0.6, 1

        GridLayout:
            cols: 4
            padding: 5, 5
            spacing: 5, 5

            Button:
                text: '0'
                on_press: entry.text += self.text
                size_hint: None,None
                size: (root.width-15)/2, (root.height - 100)/6
                background_color: 2, 0.9, 0.6, 1
            
            Button:
                text: '.'
                on_press: entry.text += self.text
                size_hint: None,None
                size: (root.width-25)/4, (root.height - 100)/6
                background_color: 2, 0.9, 0.6, 1
            Button:
                text: '='
                on_press: entry.text = root.calculate(entry.text) 
                size_hint: None,None
                size: (root.width-25)/4, (root.height - 100)/6
                background_color: 2, 0.9, 0.6, 1

<ClockScreen>:
    clock_label: clock_label
    orientation: 'vertical'
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            size_hint_x: None
            size_hint_y: None
            width: 100
            height: 30
            RelativeLayout:
                Button:
                    text: "Back"
                    on_press: root.back()
                    background_color: 2, 0.9, 0.6, 1
        BoxLayout:
            ClockLabel:
                id: clock_label

<ConverterScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            size_hint_x: None
            size_hint_y: None
            width: 100
            height: 30
            RelativeLayout:
                Button:
                    text: "Back"
                    on_press: root.back()
                    background_color: 2, 0.9, 0.6, 1
        FloatLayout:
            padding: 10, 10
            spacing: 10, 10
            Button:
                id: unitType
                text: 'Metric Type:'
                size_hint_x: 0.35
                size_hint_y: 0.4
                pos_hint: {'center_x': .2, 'center_y': 0.7}
                background_color: 2, 0.9, 0.6, 1
                on_press: root.type_release_clicked()
            Button:
                id: unit1
                text: 'Unit 1:'
                size_hint_x: 0.5
                size_hint_y: 0.4
                pos_hint: {'center_x': .7, 'center_y': 0.7}
                background_color: 2, 0.9, 0.6, 1
                on_press: root.unit1_release_clicked(root.ids.unitType.text)

        FloatLayout:
            padding: 10, 10
            spacing: 10, 10
            Label:
                text: ''
                size_hint_x: 0.35
                size_hint_y: 0.4
                pos_hint: {'center_x': .2, 'center_y': 0.6}
            TextInput:
                id: val_in
                size_hint_x: 0.5
                size_hint_y: 0.4
                pos_hint: {'center_x': .7, 'center_y': 0.6}
                text: '0'

        FloatLayout:
            padding: 10, 10
            spacing: 10, 10
            Label:
                text: ''
                size_hint_x: 0.35
                size_hint_y: 0.4
                pos_hint: {'center_x': .2, 'center_y': 0.5}
            Button:
                id: unit2
                text: 'Unit 2:'
                size_hint_x: 0.5
                size_hint_y: 0.4
                pos_hint: {'center_x': .7, 'center_y': 0.5}
                background_color: 2, 0.9, 0.6, 1
                on_press: root.unit2_release_clicked(root.ids.unitType.text)

        FloatLayout:
            padding: 10, 10
            spacing: 10, 10
            Label:
                text: ''
                size_hint_x: 0.35
                size_hint_y: 0.4
                pos_hint: {'center_x': .2, 'center_y': 0.4}
            TextInput:
                id: val_out
                size_hint_x: 0.5
                size_hint_y: 0.4
                pos_hint: {'center_x': .7, 'center_y': 0.4}
                text: root.converter(unit1.text, unit2.text, val_in.text)

