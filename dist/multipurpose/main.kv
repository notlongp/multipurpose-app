<JournalScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            size_hint_x: None
            size_hint_y: None
            width: 100
            height: 30
            RelativeLayout:
                Button:
                    text: "Back"
                    on_press: root.back()
                    background_color: 2, 0.9, 0.6, 1
    RelativeLayout:
        Button:
            text: 'New Note'
            size_hint_x: None
            size_hint_y: None
            pos_hint_x: None
            pos_hint_y: None
            width: 250
            height: 50
            pos_hint: {'center_x': .5, 'center_y': 0.8}
            background_color: 2, 0.9, 0.6, 1
            on_press: root.new_screen()
    RelativeLayout:
        Button:
            text: 'Existing Notes'
            size_hint_x: None
            size_hint_y: None
            width: 250
            height: 50
            pos_hint: {'center_x': .5, 'center_y': 0.6}
            background_color: 2, 0.9, 0.6, 1
            on_press: root.exist_screen()

<NewJournalScreen>:
    GridLayout:
        cols: 1
        padding: 10, 10
        spacing: 10, 10
        GridLayout:
            cols: 1
            spacing: 10, 10
            TextInput:
                id: title_text
                size_hint_x: None
                size_hint_y: None
                width: 300
                height: 50
                hint_text: 'Title (overlaps will overwrite previous document)'
                text: ''
            TextInput:
                id: main_text
                hint_text: 'Start typing here'
                text: ''
            
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: 'Cancel'
                background_color: 2, 0.9, 0.6, 1
                on_press: root.cancel()
            Button:
                text: 'Submit'
                background_color: 2, 0.9, 0.6, 1
                on_press: root.submit(title_text.text, main_text.text)

<AppScreenManager>
    ExistingScreen:

<ExistingScreen>
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            size_hint_x: None
            size_hint_y: None
            width: 100
            height: 30
            RelativeLayout:
                Button:
                    text: "Back"
                    on_press: root.back()
                    background_color: 2, 0.9, 0.6, 1
        GridLayout:
            cols: 1
            padding: 10, 10
            spacing: 10, 10
            Button:
                id: exist_id
                text: 'Select note:'
                size_hint_x: None
                size_hint_y: None
                width: 300
                height: 50
                background_color: 2, 0.9, 0.6, 1
                on_press: root.create_scrollview()

            TextInput:
                id: change_title
                size_hint_x: None
                size_hint_y: None
                width: 300
                height: 50
                text: root.publish_title(root.ids.exist_id.text)

            TextInput:
                id: change_text
                text: root.publish_text(root.ids.exist_id.text)

            GridLayout:
                cols: 2
                size_hint: 0.2, 0.2
                padding: 10, 10
                spacing: 10, 0
                Button:
                    text: 'Delete Changes and Quit'
                    background_color: 2, 0.9, 0.6, 1
                    on_press: root.cancel()
                Button:
                    text: 'Save Changes and Quit'
                    background_color: 2, 0.9, 0.6, 1
                    on_press: root.submit(root.ids.exist_id.text, change_text.text)
            
<RootWidget>:
    OpeningScreen:
        name: "opening_screen"
    CalculatorScreen:
        name: "calculator_screen"
    ClockScreen:
        name: "clock_screen"
    ConverterScreen:
        name: "converter_screen"
    JournalScreen:
        name: "journal_screen"
    NewJournalScreen:
        name: "new_screen"
    ExistingScreen:
        name: "existing_screen"
    